<div class="login_theme dev_login">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", input_html: { class: 'dev_field' } %>
    </div><br>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", input_html: { class: 'dev_field' } %>
    </div><br>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %><br>
    </div><br>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", input_html: { class: 'dev_field' } %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <br><br>
  <%= render "devise/shared/links" %>

</div>