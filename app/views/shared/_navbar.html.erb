<% if user_signed_in? %>
  <div class="ui teal inverted menu">
    <div class="ui container">
      <%= link_to t('todo'), root_path, class: 'header item blue' %>

      <%= link_to t('dashboard'), dashboard_path, class: 'ui item' %>

      <div class="ui simple dropdown item">
        <span><%= t('todo') %></span>

        <i class="dropdown icon"></i>

        <div class="menu">
          <%= link_to t('all'), todo_lists_path, class: 'ui item' %>
          <%= link_to t('pending'), pending_path, class: 'item' %>
          <%= link_to t('completed'), completed_path, class: 'item' %>
        </div>
      </div>

      <%= link_to t('user'), users_path, class: 'ui item' %>

      <div class="right menu">
        <div class="ui simple dropdown item">
          <span><%= current_user.name %> - <%= current_user.email %></span>

          <i class="dropdown icon"></i>
          <div class="menu">
            <%= link_to(
              t('exit'),
              destroy_user_session_path,
              method: :delete,
              class: 'ui item'
            ) %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
