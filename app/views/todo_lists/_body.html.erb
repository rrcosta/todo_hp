<table class="ui teal single line center table">
  <thead>
    <tr>
      <th><%= TodoList.human_attribute_name(:title) %></th>
      <th><%= TodoList.human_attribute_name(:description) %></th>
      <th><%= TodoList.human_attribute_name(:done) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td class='truncate'><%= todo_list.title %></td>
        <td class='truncate'><%= todo_list.description %></td>
        <td>
          <% if todo_list.done %>
            <span class="ui green label">
              Completada
            </span>
          <% else %>
            <span class="ui red label">
              Pendente
            </span>
          <% end %>
        </td>
        <td><%= link_to t('general.actions.show'), todo_list %></td>
        <td><%= link_to t('general.actions.edit'), edit_todo_list_path(todo_list) %></td>
        <td><%= link_to t('general.actions.destroy'), todo_list, method: :delete, data: { confirm: t('general.actions.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>